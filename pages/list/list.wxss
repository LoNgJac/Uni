page {
  width: 100%;
  height: 100%;
}
.wrap {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}
.trademark {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  font-weight: 800;
  color: #fff;
  background: black;
  display: flex;
  align-items: center;
  justify-content: center;
}
.box {
  width: 100%;
  position: relative;
  flex: 1;
}
.box .scrool-more {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
}
.box .box_left {
  width: 25%;
  height: 100%;
  background: #ffffff;
  position: fixed;
  overflow: auto;
  border-radius: 10px;
}
.box .box_left .box_left_item {
  width: 100%;
  height: 100rpx;
  background: #fff;
  text-align: center;
  line-height: 100rpx;
  color: goldenrod;
}
.box .box_left .active {
  width: 100%;
  height: 100rpx;
  background: black;
  color: #fff;
}
.box .space {
  height: 20px;
}
.box .shadow {
  margin-top: 10px;
}
.box .box_right {
  width: 75%;
  float: right;
}
.box .box_right .tu1 {
  display: block;
}
.box .box_right .tu2 {
  display: none;
}
.box .box_right .tu .actiid {
  text-align: center;
  margin: 30rpx 0;
  color: #000;
}
.box .box_right .tu .top_img {
  width: 100%;
  height: 100%;
  box-shadow: 0 0 5rpx #d9d9d9;
  border: 0.5px solid #d9d9d9;
  border-radius: 5px;
  margin-bottom: 10rpx;
}
.box .box_right .tu .top_img .picture {
  width: 80px;
  height: 80px;
  display: inline-block;
  margin: 20rpx 30rpx;
}
.box .box_right .tu .top_img .picture image {
  width: 100%;
  height: 100%;
}
.box .box_right .tu .top_img .text {
  display: inline-block;
  padding-top: 0;
}

